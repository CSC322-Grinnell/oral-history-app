<% provide(:title, 'Interviews') %>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Raleway">
<style>
body,h1,h2,h3,h4,h5 {font-family: "Raleway", sans-serif}
</style>
<body class="w3-light-grey">
<h1>Archive</h1>

<ul class="interviews">
  <% @interviews.each do |interview| %>
    <li class="li-archive">
      <div class="w3-col l8 s12">
  <!-- Blog entry -->
  <div class="w3-card-4 w3-margin w3-white">
    <img src=<%=interview.image%> alt="Nature" style="width:100%">
    <div class="w3-container">
      <h3><b><%= link_to interview.name, interview %></b></h3>
      <h5>Secondary Title, <span class="w3-opacity"><%= interview.date%></span></h5>
    </div>

    <div class="w3-container">
      <p><%= "Summary: " + interview.summary %></p>
      <p><%= "Interviewer: " + interview.interviewer %></p>
      
      <div class="w3-row">
        <div class="w3-col m8 s12">
          <p><button class="w3-button w3-padding-large w3-white w3-border"><b><%= link_to "READ MORE >>", interview %></b></button></p>
        </div>
        <div class="w3-col m4 w3-hide-small">
          <p><span class="w3-padding-large w3-right"><b>Comments Â </b> <span class="w3-tag">0</span></span></p>
        </div>
      </div>
    </div>
  </div>
    </li>
  <% end %>
</ul>

